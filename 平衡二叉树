class Solution {
  public boolean isBalanced(TreeNode root){
    if(root == null){
      return true;
    }
    else{
      return Math.abs(height(root.left) - height(roo.right) <=1 && isBalanced(roo.left) && isBalanced(root.right)
    }
  }
  public int height(TreeNode root){
    if(root == null){
      return 0;
    }else{
      return Math.max(height(root.left),height(root.right))+1;
    }
  }
}
